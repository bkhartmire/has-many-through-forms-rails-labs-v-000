<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<h4>Comments:</h4>
<% @post.comments.each do |comment| %>
  <%= comment.user.username %> says:
  <%= comment.content %><br>
<% end %>

<% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user_path(user) %><br>
<% end %>

<%= form_for @comment do |f| %>
  <% f.label :content %>
  <% f.text_field :content %>
  <% f.submit "Comment" %>
<% end %>
